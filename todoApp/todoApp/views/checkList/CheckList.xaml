<UserControl
    x:Class="todoApp.views.checkList.CheckList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border
        Margin="2"
        BorderThickness="1.5"
        CornerRadius="10">

        <Grid>

            <Grid Grid.Column="0" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="7*" />
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="0"
                    Margin="10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderBrush="LightGray"
                    BorderThickness="1.5"
                    CornerRadius="10" />

                <Border
                    Grid.Row="1"
                    Margin="10,0,10,10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderBrush="LightGray"
                    BorderThickness="1.5"
                    CornerRadius="10" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
