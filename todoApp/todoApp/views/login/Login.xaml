<Window
    x:Class="todoApp.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:todoApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login"
    Width="410"
    Height="420"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  기존 버튼 스타일  -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  체크박스 스타일  -->
        <Style x:Key="RoundedCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="LightGray" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <Border
                                Width="16"
                                Height="16"
                                Margin="0,0,5,0"
                                Background="White"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="3">
                                <Path
                                    x:Name="CheckMark"
                                    Data="M 3 8 L 6 11 L 12 4"
                                    SnapsToDevicePixels="True"
                                    Stroke="#5C4FEB"
                                    StrokeThickness="2"
                                    Visibility="Collapsed" />
                            </Border>
                            <ContentPresenter VerticalAlignment="Center" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="0.7*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="48"
            FontWeight="SemiBold"
            Foreground="#5C4FEB"
            Text="Todo" />
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Width="350"
            Height="261"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1.2*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.8*" />
                        <RowDefinition Height="1.8*" />
                        <RowDefinition Height="0.6*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1.6*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="25,0,25,0"
                            Padding="1"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="LightGray">
                            id
                        </Label>
                        <Border
                            Grid.Row="1"
                            Width="310"
                            Height="34"
                            Margin="1"
                            Padding="5,0,5,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            BorderBrush="LightGray"
                            BorderThickness="1"
                            CornerRadius="10">
                            <TextBox
                                Name="txtId"
                                Margin="3,3,3,-2"
                                Padding="0"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="Black" />
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1.6*" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Margin="25,0,25,0"
                            Padding="1"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="LightGray">
                            pwd
                        </Label>
                        <Border
                            Grid.Row="1"
                            Width="310"
                            Height="34"
                            Margin="1"
                            Padding="5,0,5,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            BorderBrush="LightGray"
                            BorderThickness="1"
                            CornerRadius="10">
                            <PasswordBox
                                Name="txtpwd"
                                Margin="3,3,3,-2"
                                Padding="0"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="Black" />
                        </Border>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="2.5*" />
                    </Grid.RowDefinitions>

                    <CheckBox
                        Grid.Row="0"
                        Margin="22.5,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Content="로그인 상태 유지"
                        FontSize="10"
                        FontWeight="SemiBold"
                        Foreground="LightGray"
                        Style="{StaticResource RoundedCheckBoxStyle}" />

                    <Button
                        Grid.Row="1"
                        Width="310"
                        Height="43"
                        Margin="10,4,10,15"
                        VerticalAlignment="Top"
                        Background="#5C4FEB"
                        Click="Button_Click"
                        Content="login"
                        FontSize="22"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Style="{StaticResource RoundedButtonStyle}" />
                </Grid>

            </Grid>
        </Border>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid
                Grid.Column="1"
                Margin="30,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.15*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="LightGray">
                    비밀번호 찾기
                </Label>
                <Label
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="10"
                    Foreground="LightGray">
                    l
                </Label>
                <Label
                    Grid.Column="2"
                    Margin="0,0,25,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="10"
                    FontWeight="SemiBold"
                    Foreground="LightGray">
                    회원가입
                </Label>
            </Grid>

        </Grid>
    </Grid>
</Window>
